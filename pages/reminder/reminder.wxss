/* pages/reminder/reminder.wxss - 高端设计 */
.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  min-height: 100vh;
}

.reminder-container {
  max-width: 700rpx;
  margin: 0 auto;
}

/* 作业标题区域 */
.homework-title-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.title-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.homework-title {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.4;
}

/* 设置区域 */
.setting-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
}

.section-content {
  padding-top: 8rpx;
}

.picker-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  font-size: 30rpx;
  background: #fafbfc;
  transition: all 0.3s;
}

.picker-item:active {
  border-color: #667eea;
  background: #ffffff;
}

.picker-item .placeholder {
  color: #95a5a6;
}

.picker-item .arrow {
  color: #95a5a6;
  font-size: 36rpx;
  font-weight: 300;
}

.hint-text {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #64748b;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #eef2ff 0%, #f5f7fa 100%);
  border-radius: 12rpx;
  border-left: 4rpx solid #667eea;
}

.cancel-btn {
  margin-top: 16rpx;
  padding: 16rpx 32rpx;
  background: #f1f5f9;
  color: #64748b;
  border-radius: 12rpx;
  text-align: center;
  font-size: 28rpx;
  transition: all 0.3s;
}

.cancel-btn:active {
  background: #e2e8f0;
  transform: scale(0.98);
}

/* 滑块容器 */
.slider-container {
  padding: 20rpx 0;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #94a3b8;
}

/* 结果区域 */
.result-section {
  margin: 32rpx 0;
}

.result-card {
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  display: flex;
  align-items: flex-start;
  box-shadow: 0 8rpx 24rpx rgba(251, 191, 36, 0.3);
  border: 2rpx solid #fbbf24;
}

.result-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.result-content {
  flex: 1;
}

.result-title {
  display: block;
  font-size: 26rpx;
  color: #92400e;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.result-time {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #78350f;
  margin-bottom: 12rpx;
  letter-spacing: -1rpx;
}

.result-desc {
  display: block;
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
}

/* 操作按钮区域 */
.action-section {
  margin-top: 48rpx;
  padding-bottom: 40rpx;
}

.complete-btn {
  width: 100%;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.complete-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.4);
}

.btn-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

.completed-badge {
  width: 100%;
  background: linear-gradient(135deg, #e5e7eb 0%, #d1d5db 100%);
  color: #6b7280;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
  color: #10b981;
}

