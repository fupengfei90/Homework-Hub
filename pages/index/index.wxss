.container {
  padding: 0;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
}

/* Á≠õÈÄâÊ†è - È´òÁ´ØËÆæËÆ° */
.filter-bar {
  background: #ffffff;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  border-bottom: 1rpx solid #f1f5f9;
  position: sticky;
  top: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
  height: 64rpx;
  padding: 0 24rpx;
}

.filter-item {
  display: inline-block;
  padding: 12rpx 32rpx;
  margin: 0 12rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #f1f5f9 0%, #e2e8f0 100%);
  color: #64748b;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-item:active {
  transform: scale(0.95);
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
  font-weight: 600;
}

/* Âä†ËΩΩ‰∏≠ */
.loading {
  text-align: center;
  padding: 120rpx 0;
  color: #95a5a6;
  font-size: 28rpx;
}

/* ‰Ωú‰∏öÂàóË°® */
.homework-list {
  padding: 0 24rpx 24rpx;
}

.homework-item {
  margin-bottom: 24rpx;
  transition: all 0.3s ease;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.homework-item:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f1f5f9;
}

.homework-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #1e293b;
  flex: 1;
  line-height: 1.4;
  letter-spacing: -0.5rpx;
}

.homework-content {
  margin-bottom: 24rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border-radius: 12rpx;
  border-left: 3rpx solid #667eea;
}

.content-text {
  font-size: 30rpx;
  color: #475569;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

.media-hint {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #eef2ff 0%, #f5f7fa 100%);
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

.media-hint .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.homework-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f1f5f9;
}

.time-text {
  font-size: 24rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
}

.time-text::before {
  content: 'üïê';
  margin-right: 8rpx;
}

.delete-btn {
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s;
}

.delete-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

/* Á©∫Áä∂ÊÄÅ */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
  color: #94a3b8;
}

.empty-icon {
  font-size: 140rpx;
  margin-bottom: 32rpx;
  filter: drop-shadow(0 4rpx 12rpx rgba(0, 0, 0, 0.1));
}

.empty-hint {
  display: block;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #cbd5e0;
  line-height: 1.6;
}
