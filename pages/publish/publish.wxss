/* pages/publish/publish.wxss - 高端设计 */
.container {
  padding: 24rpx;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
}

.form-container {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 8rpx 40rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(255, 255, 255, 0.8);
}

.form-item {
  margin-bottom: 48rpx;
}

.form-label {
  font-size: 30rpx;
  color: #2c3e50;
  margin-bottom: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

.label-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.required {
  color: #ff6b6b;
  margin-left: 8rpx;
  font-weight: bold;
}

.form-input {
  width: 100%;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafbfc;
  transition: all 0.3s;
}

.form-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.picker-view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  font-size: 30rpx;
  background: #fafbfc;
  transition: all 0.3s;
}

.picker-view:active {
  border-color: #667eea;
  background: #ffffff;
}

.picker-view .placeholder {
  color: #95a5a6;
}

.picker-view .arrow {
  color: #95a5a6;
  font-size: 36rpx;
  font-weight: 300;
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  background: #fafbfc;
  line-height: 1.6;
  transition: all 0.3s;
}

.form-textarea:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 12rpx;
}

/* 链接输入组 */
.link-input-group {
  display: flex;
  gap: 16rpx;
  margin-top: 20rpx;
}

.link-input {
  flex: 1;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  font-size: 28rpx;
  background: #fafbfc;
  box-sizing: border-box;
}

.link-input:focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.paste-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 16rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s;
}

.paste-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.paste-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

/* 链接显示 */
.link-display {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #e8ecf0;
}

.link-content {
  margin-bottom: 16rpx;
}

.link-text {
  font-size: 26rpx;
  color: #2c3e50;
  word-break: break-all;
  line-height: 1.5;
}

.link-actions {
  display: flex;
  justify-content: flex-end;
}

.delete-link {
  padding: 12rpx 24rpx;
  background: #ff6b6b;
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.delete-link:active {
  transform: scale(0.95);
}

/* 文件上传区域 */
.file-upload-section {
  margin-top: 24rpx;
}

.upload-divider {
  display: flex;
  align-items: center;
  margin: 24rpx 0;
  text-align: center;
}

.upload-divider::before,
.upload-divider::after {
  content: '';
  flex: 1;
  height: 1rpx;
  background: linear-gradient(90deg, transparent, #e8ecf0, transparent);
}

.divider-text {
  padding: 0 20rpx;
  color: #95a5a6;
  font-size: 24rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  border: 2rpx dashed #cbd5e0;
  border-radius: 20rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
  color: #64748b;
  transition: all 0.3s;
}

.upload-btn:active {
  border-color: #667eea;
  background: linear-gradient(135deg, #eef2ff 0%, #f5f7fa 100%);
  transform: scale(0.98);
}

.upload-icon {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e8ecf0;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #ffffff 100%);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.file-name {
  flex: 1;
  font-size: 28rpx;
  color: #2c3e50;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20rpx;
}

.delete-file {
  padding: 12rpx 24rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #ffffff;
  border-radius: 12rpx;
  font-size: 26rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s;
}

.delete-file:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 107, 0.3);
}

.submit-container {
  margin-top: 80rpx;
  padding-bottom: 40rpx;
}

.submit-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s;
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.submit-btn[disabled] {
  background: #e2e8f0;
  color: #94a3b8;
  box-shadow: none;
}
