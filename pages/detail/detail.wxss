.reminder-section {
  margin-top: 48rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f1f5f9;
}

.reminder-btn {
  width: 100%;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 0;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.reminder-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(245, 158, 11, 0.4);
}

.reminder-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}
